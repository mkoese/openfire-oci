<?xml version="1.0" encoding="UTF-8"?>

<jive>
  <adminConsole>
    <port>9090</port>
    <securePort>9091</securePort>
  </adminConsole>

  <!-- Embedded database (development only) -->
  <connectionProvider>
    <className>org.jivesoftware.database.EmbeddedConnectionProvider</className>
  </connectionProvider>

  <rss>
    <enabled>false</enabled>
  </rss>

  <locale>en</locale>
  <fqdn>localhost</fqdn>

  <!-- Autosetup: runs once on first start, then replaces itself with <setup>true</setup> -->
  <autosetup>
    <run>true</run>
    <locale>en</locale>
    <xmpp>
      <domain>localhost</domain>
      <fqdn>localhost</fqdn>
    </xmpp>
    <encryption>
      <algorithm>AES</algorithm>
    </encryption>
    <database>
      <mode>embedded</mode>
    </database>
    <profile>
      <mode>default</mode>
    </profile>
    <admin>
      <email>admin@localhost</email>
      <password>admin</password>
    </admin>
  </autosetup>
</jive>
